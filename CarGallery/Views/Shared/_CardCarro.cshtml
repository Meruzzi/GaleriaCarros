@{
}

@inject GaleriaCarrosContext context

<div class="container text-center">
    <div class="row">
        @foreach (var item in context.Carros.Include(c => c.Fabricante))
        {
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@item.Imagem" alt="Card image cap">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@item.Nome</li>
                    <li class="list-group-item">Fabricante: @(item.Fabricante != null ? item.Fabricante.Nome : "Desconhecido")</li>
                    <li class="list-group-item">@item.DescCurta</li>
                </ul>
                <div class="card-body">
                    <a href="@Url.Action("Details", "Carro", new { id = item.Id })" class="card-link">Saiba mais</a>
                </div>
            </div>
        }
    </div>
</div>
