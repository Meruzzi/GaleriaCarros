@model GaleriaCarros.Models.Carro

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar Carro</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescCurta" class="control-label">Descrição curta</label>
                <input asp-for="DescCurta" class="form-control" />
                <span asp-validation-for="DescCurta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescCompleta" class="control-label">Descrição completa</label>
                <textarea asp-for="DescCompleta" class="form-control"></textarea>
                <span asp-validation-for="DescCompleta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Escolha uma imagem</label>
                <input type="file" accept="image/*" class="form-control" id="imageFile" name="imageFile" />

            </div>
            <br />
            <div class="form-group">
                <label class="control-label">Fabricante</label>

                <select name="idFabricante" id="idFabricante">
                    <option value="">Selecione o Fabricante</option>
                    @foreach (Fabricante item in ViewBag.fabricantes)
                    {
                    <option value="@item.Id">@item.Nome</option>
                    }
                </select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-controller="Fabricante" asp-action="Index">Voltar a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
